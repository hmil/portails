{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "baseUrl": "src",
        "outDir": "build/tsc/",
        "allowJs": true,
        "lib": [
            "DOM",
            "ES2015"
        ]
    },
    "include": [
        "src/"
    ]
}